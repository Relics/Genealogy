       <ImageView android:id="@+id/logo"
              android:background="@drawable/ic_launcher"
               android:gravity="center"
               android:layout_marginRight="10dip"
               android:layout_width="52dp"
               android:layout_height="52dp"/>

        <TextView
			android:textColor="@color/black"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/logo"
            android:paddingBottom="7dip"
            android:text="赚金币任务一区"
            android:textSize="16sp"
            android:textStyle="bold" />
        

        <TextView
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/logo"
            android:text="任务超多，金币秒到！"
            android:textColor="@color/black_white" />

        <ImageView
            android:id="@+id/zhuan_1_arrow"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:src="@drawable/game_arrow" />
       
        <TextView
            android:paddingTop="6dp"
            android:gravity="center"
			android:id="@+id/detailed"
         	android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/zhuan_1_arrow"
            android:layout_centerVertical="true"
            android:paddingBottom="7dip"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/yellow_1"
            android:textStyle="bold" />
        <TextView
           
            android:gravity="center"
			android:id="@+id/progress"
         	android:layout_marginBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailed"
            
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/yellow_1"
             />
      
        </RelativeLayout>
        	
       
        
